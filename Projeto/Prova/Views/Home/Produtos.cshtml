@model PagedList.IPagedList<Prova.Models.Produto>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Produtos"; }
<h1>Produtos</h1>
<div class="row">
    <div class="col-xs-12">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Código", "Produtos", new { sortOrder = ViewBag.CodProdSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Código de barras", "Produtos", new { sortOrder = ViewBag.CodBarrasSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Descrição", "Produtos", new { sortOrder = ViewBag.DescProdSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                <tr>
                    <td>@produto.codProduto</td>
                    <td>@produto.codBarrasProduto</td>
                    <td>@produto.descProduto</td>
                </tr>
                }
            </tbody>
        </table>
        <br />
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Produtos",
            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

    </div>
</div>